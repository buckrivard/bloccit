<div class="row">
	<div class="col-md-8">
		<div class="media">
			<br />
			<% avatar_url = @user.avatar_url(128) %>
			<% if avatar_url %>
				<div class="media-left">
					<%= image_tag avatar_url, class: 'media-object' %>
				</div>
			<% end %>
			<div class="media-body">
				<h2 class="media-heading"><%= @user.name %></h2>
				<small>
					<%= pluralize(@user.posts.count, 'post') %>,
					<%= pluralize(@user.comments.count, 'comment') %>
				</small>
			</div>
		</div>
	</div>
</div>

<h2>Posts</h2>

<%= render(@user.posts) || content_tag(:p, "#{@user.name} hasn't posted shit") %>

<h2>Comments</h2>
<% @user.comments.each do |comment| %>
	<div class="media">
		<div class="media-left">
			<%= image_tag(comment.post.user.avatar_url(48), class: 'media-object') %>
		</div>
		<div class="media-body">
			<%= render comment.post %>
		</div>
	</div>
	<div class="media-right">
	<%= render(comment) || content_tag(:p, "#{@user.name} hasn't commented on anything yet") %>
	</div>
<% end %>

<h2>Favorites</h2>
<% if @user.favorites.any? %>
	<% @user.favorites.each do |f| %>
	<div class="media favorite-posts">
		<div class="media-left">
			<%= image_tag(f.post.user.avatar_url(48), class: 'media-object') %>
			<%= link_to f.post.user.name, f.post.user %>
		</div>
		<div class="media-body">
			<%= render f.post %>
		</div>
	</div>
	<% end %>
<% else %>
	<%= content_tag(:p, "User hasn't favorited on anything yet") %>
<% end %>
